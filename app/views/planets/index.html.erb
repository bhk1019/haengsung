<div class="container">
  <div class="col-8 offset-2">
    <h4 class="text-center">At a glance planetary ephermerides.</h4>
    <br />
  </div>
</div>

<div class="container">

    <div class="accordion">
      <div class="row">
      <% @planets.each do |planet| %>
        
        <div class="col-8 col-xs-8 col-sm-8 col-md-6 col-lg-4 offset-2 offset-md-3 offset-lg-1">
          <div class="card">
            
            <div class="card-header" id="heading<%= planet.name %>">
              <h5 class="mb-0">
                <button class="btn btn-link" data-toggle="collapse" data-target="#collapse-<%= planet.name %>" aria-expanded="true" aria-controls="collapse-<%= planet.name %>" style="margin: auto;">
                  <%= planet.name %> is in <%= planet.current_degree %>&deg; <%= planet.current_sign %>
                </button>
              </h5>
            </div>

            <div id="collapse-<%= planet.name %>" class="collapse" aria-labelledby="heading<%= planet.name %>" data-parent="#accordion">
              <div class="card-body">
                <p>
                  This planet represents: <%= planet.description %>
                </p>
                <br />
                <p>
                  Upcoming astrological events:
                  <ul>
                    <li>
                      <%= planet.name %> enters <%= planet.next_sign %> on <%= planet.changes_sign_at %>.
                    </li>
                    <% if planet.name != "Sun" %>
                      <li>
                        <%= planet.name %> is currently 
                          <% if planet.is_direct? %>
                            direct. <%= planet.name %> will enter retrograde <%= planet.sign_at(planet.next_station) %> on <%= planet.next_station %>.
                          <% else %>
                            in retrograde. <%= planet.name %> will go direct <%= planet.sign_at(planet.next_station) %> on <%= planet.next_station %>.
                          <% end %>
                        </li>
                    <% end %>
                  </ul>
                </p>
              </div>
            </div>
          </div>
          <br />

        </div>
        
      <% end %>
      </div>
    </div>

</div>
<br />
